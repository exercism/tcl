#!/usr/bin/env tclsh
package require tcltest
namespace import ::tcltest::*
proc skip {args} {
    if {!([info exists ::env(RUN_ALL)] && $::env(RUN_ALL))} {
        ::tcltest::skip {*}$args
    }
}

proc listMatch {expected actual} {
    if {[llength $expected] != [llength $actual]} {
        return false
    }
    foreach e $expected a $actual {
        if {$e ne $a} {
            return false
        }
    }
    return true
}
customMatch list listMatch

############################################################
source "minesweeper.tcl"

test minesweeper-1 "no rows" -body {
    annotate {}
} -returnCodes ok -match list -result {}

